<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#e1d15d"
    >

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="Name"
            android:textColor="#4f0aab"
            android:textSize="25sp" />
        <EditText
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:hint="Edit Text"
            android:textSize="15sp"
            android:textColor="#ec0909"
            android:inputType="text"
            android:id="@+id/name"/>

    </LinearLayout>


<LinearLayout
     android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Batch"
        android:textSize="25sp"
        android:textColor="@color/MyColor1"/>
    <EditText
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:hint="Edit Text"
        android:textSize="15sp"
        android:textColor="@color/MyColor2"
        android:inputType="text"
        android:id="@+id/batch"/>
</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="Year"
            android:textSize="25sp"
            android:textColor="@color/MyColor1"/>
        <EditText
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:hint="Edit Text"
            android:textSize="15sp"
            android:textColor="@color/MyColor2"
            android:inputType="number"
            android:id="@+id/year"/></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="Course"
            android:textSize="25sp"
            android:textColor="@color/MyColor1"/>
        <EditText
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:hint="Edit Text"
            android:textSize="15sp"
            android:textColor="@color/MyColor2"
            android:inputType="text"
            android:id="@+id/course"/></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="Phone"
            android:textSize="25sp"
            android:textColor="@color/MyColor1"/>
        <EditText
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:hint="Edit Text"
            android:textSize="15sp"
            android:textColor="@color/MyColor2"
            android:inputType="phone"
            android:id="@+id/phn"/></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="Address"
            android:textSize="25sp"
            android:textColor="@color/MyColor1"/>
        <EditText
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:hint="Edit Text"
            android:textSize="15sp"
            android:textColor="@color/MyColor2"
            android:inputType="text"
            android:id="@+id/add"/></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <Button
            android:layout_width="150dp"
            android:layout_height="75dp"
            android:text="Register"
            android:textSize="25sp"
            android:background="#66ede2"
            android:textAlignment="center"
            android:id="@+id/b1"/>
    </LinearLayout>
</LinearLayout>